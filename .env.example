# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-with-at-least-32-characters
JWT_ISSUER=https://localhost:7001
JWT_AUDIENCE=https://localhost:7001
JWT_EXPIRATION_MINUTES=60

# Weather API Configuration
# Set to "true" to use OpenWeatherMap API instead of WeatherAPI.com
USE_OPENWEATHERMAP=true

# OpenWeatherMap API Key (required if USE_OPENWEATHERMAP=true)
# Get your free API key at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# WeatherAPI.com API Key (required if USE_OPENWEATHERMAP=false)
# Get your free API key at: https://www.weatherapi.com/
WEATHERAPI_KEY=your-weatherapi-key

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# DynamoDB Configuration
DYNAMODB_SERVICE_URL=http://localhost:8000

# Application Environment
ASPNETCORE_ENVIRONMENT=Development